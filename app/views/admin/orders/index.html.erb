<div class="container">
  <div class="row">
    <h3>注文履歴一覧</h3>
  </div>

  <table class="table cart_items">
    <!--クラス名修正？-->
    <tr>
      <th>購入日時</th>
      <th>購入者</th>
      <th>注文個数</th>
      <th>注文ステータス</th>
    </tr>
    <% @orders.each do |order| %>
      <td>
        <%= link_to admin_order_datails_path do %>
          <%= order.created_at %>
          <!--<%#= order.created_at.to_s(:datetime_jp) %> 日本時間に修正する？-->
        <% end %>
      </td>
      <td><%= ordes.last_name %><%= order.first_name %></td>
      <td><%= order.order_details.sum(:quantity) %></td>
      <td><%#= order.status_i18n %></td>
      　　<!--Gem必要-->
    </tbody>
    <% end %>
  </table>

</div>