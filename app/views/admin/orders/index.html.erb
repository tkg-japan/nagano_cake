<div class="container">
  <div class="row">
    <h3>注文履歴一覧</h3>
  </div>

  <table>
    <tr>
      <th>購入日時</th>
      <th>購入者</th>
      <th>注文個数</th>
      <th>注文ステータス</th>
    </tr>
    <% @orders.each do |order| %>
      <td>
        <%= link_to admin_order_path(order.id) do %>
          <%= order.created_at.to_s(:datetime_jp) %>
        <% end %>
      </td>
      <td><%= order.name %></td>
      <td>
        <%= order.order_details.sum(:amount) %>
        </td>
      <td>
        <%= order.status %>
      </td>
    </tbody>
    <% end %>
  </table>
</div>