<div class="container">
  <div class="row">
    <h3>注文履歴一覧</h3>
  </div>

  <table class="table cart_items">
    <!--クラス名修正？-->
    <tr>
      <th>購入日時</th>
      <th>購入者</th>
      <th>注文個数</th>
      <th>注文ステータス</th>
    </tr>
    <% @orders.each do |order| %>
      <td>
        <%= link_to admin_order_path(order.id) do %>
          <%= order.created_at.to_s(:datetime_jp) %>
        <% end %>
      </td>
      <td><%= order.name %></td>
      <td>
        <%#= order.order_details.amount %>
        <%= order.order_details.sum(:amount) %>
        </td>
      <td>
        <%#= Order.order_statuses_i18n[order.order.order_status] %>
        <%= order.status %>
        <!--Gem必要？-->
      </td>
    </tbody>
    <% end %>
  </table>

</div>