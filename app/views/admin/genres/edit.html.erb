<main>
  <div class="container">
    <div class="row">
      <h3>ジャンル編集</h2>
    </div>

    <br>

    <div class="row">
      <div class="col-2">
        ジャンル名
      </div>

    <!--ジャンル名編集-->
      <%= form_with model:@genre,url: admin_genre_path(@genre), local:true do |f| %>
      <div class="d-flex flex-row form-group">
        <div>
          <%= f.text_field :name, autofocus: true, id:"inputName", :class => 'form-control' %>
        </div>

        <div>
          <%= f.submit "変更を保存" , class: 'btn btn-success offset-md-2' %>
        </div>
      </div>
      <% end %>

    </div>

  </div>
</main>