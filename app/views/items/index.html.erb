<div class="container">
  <div class="row">
    <div class="col-md-9 mx-auto">
    <%= render 'items/genre', genres: @genres %>
      <h2>商品一覧（全<%= @items.count %>件）</h2>
      <div class='d-flex flex-wrap'>
        <% @items.each do |item| %>
        <div class="col-md-3">
        <div class="card">
        <div class="col-xs-3">
          <%= link_to item_path(item) do %>
          <%= attachment_image_tag item, :image, :fill, 50, 50, format: "no-image-icon.jpg" %>
          <% end %>
          <%= item.name %><br>
          <%= item.price %><br>
        </div>
        </div>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
