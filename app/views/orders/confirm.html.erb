<h2>注文情報の確認</h2>
      <table>
        <thead class="table-warning">
          <th style="width: 35%">商品名</th>
          <th style="width: 15%">単価（税込）</th>
          <th style="width: 20%">数量</th>
          <th style="width: 15%">小計</th>
          <th style="width: 15%"></th>
        </thead>
        <tbody>
          <% @item.each do |item| %>
          <tr>
            <td><%= attachment_image_tag item.item, :image, format: '.jpeg', size: "60x40" %>
                <%= item.item.name %></td>
            <td><%= item.item.add_tax_price.to_s(:delimited) %></td>
            <td><%= item.amount %></td>
            <td><%= item.subtotal.to_s(:delimited) %></td>
            <td><% @total +=  item.subtotal %></td>
          </tr>
          <% end %>
        </tbody>
      </table>

      <div class="col-md-4">
　　　<table class="table table-bordered">
        <tr>
          <th>送料</th>
          <td>800</td>
        </tr>
        <tr>
        　<th>商品合計</th>
          <td><%= @total.to_s(:delimited) %></td>
        </tr>
        <tr>
        　<th>請求金額</th>
          <td><%= (@total += 800).to_s(:delimited) %></td>
        </tr>
      </table>
      </div>

　　　<table>
　　　<tr>
        <th>支払方法</th>
        <td><%= Order.payment_methods_i18n[@order.payment_method] %></td>
      </tr>
      <tr>
        <th>お届け先</th>
        <td>〒<%= @order.postcode %>
              <%= @order.address %><br>
              <%= @order.name %></td>
      </tr>
      </table>

      <%= link_to "注文を確定する", complete_orders_path, class: "btn btn-primary" %>
