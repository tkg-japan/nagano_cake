<div class="container">
  <div class="row">
    <div class="col">
      <h3>注文情報</h3>
      <table class="orders">
        <tr>
          <th>注文日</th>
          <td><%= @order.created_at.strftime("%Y/%m/%d") %></td>
        </tr>
        <tr>
          <th>配送先</th>
          <td><%= @order.address %></td>
        </tr>
        <tr>
          <th>支払方法</th>
          <td><%= @order.payment_method_i18n %></td>
        </tr>
        <tr>
          <!--モデル参照-->
          <th>ステータス</th>
          <td><%= @order.status_i18n %></td>
        </tr>
      </table>
    </div>
    <div class="col">
      <h3>請求情報</h3>
      <table class="orders">
        <tr>
          <th>商品合計</th>
          <td><%= (@order.total_payment).to_s(:delimited) %></td>
        </tr>
        <tr>
          <th>配送料</th>
          <td><%= @order.shipping_cost %></td>
        </tr>
        <tr>
          <th>ご請求額</th>
          <td><%= (@order.total_payment + @order.shipping_cost).to_s(:delimited)%></td>
        </tr>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <h3>注文内容</h3>
      <table class="orders">
        <thead>
          <tr>
            <th>商品</th>
            <th>単価（税込）</th>
            <th>個数</th>
            <th>小計</th>
          </tr>
        </thead>
        <tbody>
          <% @order.order_details.each do |item| %>
          <tr>
            <td><%= item.item.name %></td>
            <td><%= (item.item.add_tax_price) %></td>
            <td><%= item.amount %></td>
            <td><%= ((item.item.add_tax_price) * item.amount).to_s(:delimited) %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>