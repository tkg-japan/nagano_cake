<div class="container">
  <div class="row mb-3">
    <h4 class="col-md-3">会員情報編集</h4>
  </div>
  <%= form_with model: @customer, url: customer_update_path, local:true do |f| %>
    <div class="col">
      <p>(エラーメッセージの部分テンプレート表示)</p>
    </div>
    <div class="form-group row">
      <%= f.label :"氏名", class: "col-md-3" %>
      <%= f.label :"(姓)" %>
      <%= f.text_field :last_name, placeholder: "令和", class: "col-md-2 form-control" %>
      <%= f.label :"(名)", class: "ml-3" %>
      <%= f.text_field :first_name, placeholder: "道子", class: "col-md-2 form-control" %>
    </div>
    <div>
      <%= f.label :"フリガナ", class: "col-md-3" %>
      <%= f.label :"(セイ)" %>
      <%= f.text_field :last_name_kana, placeholder: "レイワ", class: "col-md-2 form-control" %>
      <%= f.label :"(メイ)", class: "ml-3" %>
      <%= f.text_field :first_name_kana, placeholder: "ミチコ", class: "col-md-2 form-control" %>
    </div>
    <div class="form-group row">
      <%= f.label :"郵便番号", class: "col-md-3" %>
      <%= f.text_field :postcode, placeholder: "0000000", class: "col-md-5 form-control" %>
    </div>
    <div class="form-group row">
      <%= f.label :"住所", class: "col-md-3" %>
      <%= f.text_field :address, placeholder: "東京都渋谷区代々木神園町0-0", class: "col-md-5 form-control" %>
    </div>
    <div class="form-group row">
      <%= f.label :"電話番号(ハイフン無し)", class: "col-md-3" %>
      <%= f.text_field :phone_number, placeholder: "00000000000", class: "col-md-5 form-control" %>
    </div>
    <div class="form-group row d-flex">
      <%= f.submit "編集内容を保存", class: "btn btn-success col-md-2 offset-3" %>
    </div>
      <!--く%= link_to "退会する", unsubscribe_customers_path, class: "btn btn-danger col-md-1 offset-1" %>-->
      <p>(退会ボタン未完成)</p>
  <% end %>
</div>
